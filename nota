      var nota1 = document.querySelector('.nota1').textContent;
      var nota2 = document.querySelector('.nota2').textContent;
      var soma = parseFloat(nota1) + parseFloat(nota2);
      alert('Soma das notas: ' + soma);
    });
  </script>
