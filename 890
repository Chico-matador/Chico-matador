#include <iostream>
#include <iomanip> // para usar notação científica se ficar muito grande
using namespace std;

int main() {
    cout << "=== Fatorial de 1 até 100 ===" << endl;

    
    long double fatorial = 1;

    for (int i = 1; i <= 100; i++) {
        fatorial *= i;

        cout << setw(3) << i << "! = " << scientific << fatorial << endl;
    }

    return 0;
}