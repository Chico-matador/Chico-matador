#include <iostream>
using namespace std;

int main() {
    int n;
    unsigned long long fatorial = 1; // tipo inteiro bem grande

    cout << "Digite um numero para calcular o fatorial: ";
    cin >> n;

    if (n < 0) {
        cout << "Nao existe fatorial de numero negativo!" << endl;
    } else {
        for (int i = 1; i <= n; i++) {
            fatorial *= i;
        }
        cout << n << "! = " << fatorial << endl;
    }

    return 0;
}